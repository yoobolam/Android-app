<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viplist_item"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/noname01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="118dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rcntStore"
                android:layout_width="86dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:text="장소"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.833"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.607" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/rcntWork1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="15dp"
                        android:paddingTop="5dp"
                        android:text="업무1"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/TextView21"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/rcntWork1"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="5dp"
                        android:text="대기시간"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/rcntWork2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:text="업무2"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/TextView22"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/rcntWork2"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="5dp"
                        android:text="대기시간"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/rcntWork3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="11dp"
                        android:paddingBottom="5dp"
                        android:text="업무3"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/TextView23"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/rcntWork3"
                        android:layout_alignBottom="@+id/rcntWork3"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="5dp"
                        android:text="대기시간"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/rcntTime1"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"

                        android:layout_alignTop="@+id/TextView21"
                        android:layout_toEndOf="@+id/TextView21"
                        android:layout_toRightOf="@+id/TextView21"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rcntTime2"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/rcntWork2"
                        android:layout_toEndOf="@+id/TextView22"
                        android:layout_toRightOf="@+id/TextView22"
                        android:paddingTop="2dp"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rcntTime3"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"


                        android:layout_alignBottom="@+id/TextView23"
                        android:layout_marginBottom="1dp"
                        android:layout_toEndOf="@+id/TextView23"
                        android:layout_toRightOf="@+id/TextView23"
                        android:text="3"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TextView21"
                        android:layout_alignBottom="@+id/TextView21"
                        android:layout_toEndOf="@+id/rcntTime1"
                        android:layout_toRightOf="@+id/rcntTime1"
                        android:text="분"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        tools:layout_editor_absoluteX="43dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TextView22"
                        android:layout_alignBottom="@+id/TextView22"
                        android:layout_toEndOf="@+id/rcntTime2"
                        android:layout_toRightOf="@+id/rcntTime2"
                        android:text="분"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        tools:layout_editor_absoluteX="43dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TextView23"
                        android:layout_alignBottom="@+id/TextView23"
                        android:layout_toEndOf="@+id/rcntTime3"
                        android:layout_toRightOf="@+id/rcntTime3"
                        android:text="분"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        tools:layout_editor_absoluteX="43dp"
                        tools:layout_editor_absoluteY="16dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>